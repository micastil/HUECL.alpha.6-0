@page
@using Microsoft.AspNetCore.Authorization

@model IndexModel
@inject IAuthorizationService AuthorizationService

@{
    var superUser = await AuthorizationService.AuthorizeAsync(User, "IsSuperUser");
}

@{
    ViewData["Title"] = "Lista de Usuarios";
}

@if (superUser.Succeeded)
{
    <a asp-action="CreateUser" class="btn btn-success btn-sm mb-3">
        <i class="bi bi-person-plus"></i> Nuevo Usuario
    </a>

    <table id="usersTable" class="table table-hover">
        <thead>
            <tr>
                <th>Usuario</th>
                <th>Email</th>
                <th>Nombre</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.userList)
            {
                <tr>
                    <td>@item.UserName</td>
                    <td>@item.Email</td>
                    <td>@item.Name @item.LastName</td>
                    <td>
                        <a data-bs-toggle="tooltip" data-bs-title="Detalle" href="/Maintenance/Users/Details?id=@item.Id">
                            <i class="bi bi-person-vcard-fill" style="vertical-align: middle;"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@section scripts
{
    <script>
        $(document).ready(function () {
            const tooltipTriggerList = document.querySelectorAll('[data-bs-toggle="tooltip"]')
            const tooltipList = [...tooltipTriggerList].map(tooltipTriggerEl => new bootstrap.Tooltip(tooltipTriggerEl))
        });
    </script>
}



