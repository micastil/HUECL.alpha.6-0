@using HUECL.alpha._6_0.Areas.Identity.Pages.Account;

@{
    ViewData["Title"] = "Iniciar Sesion";
}
@model LoginModel

<div class="modal-body">
    <main class="form-signin w-100 m-auto">
        <form id="formLoginModal" method="post">
            <h1 class="h3 mb-3 fw-normal">Iniciar sesion</h1>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div id="loginErrors" class="text-danger" style="display: none;"></div>
            <div class="form-floating">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                <label asp-for="Input.Email" class="form-label"></label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

            <div class="form-floating">
                <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" />
                <label asp-for="Input.Password" class="form-label"></label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>

            <div class="form-check text-start my-3">
                <label asp-for="Input.RememberMe" class="form-label">
                    <input asp-for="Input.RememberMe" class="form-check-input" />
                    @Html.DisplayNameFor(m => m.Input.RememberMe)
                </label>
            </div>

            <button type="button" id="loginButton" class="btn btn-primary w-100 py-2">Iniciar sesion</button>

        </form>
    </main>
</div>



