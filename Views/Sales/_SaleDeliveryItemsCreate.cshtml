@model List<SaleDeliveryItemViewModel>

<div class="row">
    <div class="col-md-12">
        <form id="frmAddSaleDeliveryItem">

            @Html.AntiForgeryToken()

            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Nombre Producto</th>
                        <th>Cantidad</th>
                    </tr>
                </thead>
                <tbody>

                    @for (var i = 0; i < Model.Count; i++)
                    {
                        <tr>
                            <td>
                                <div class="form-check">
                                    <input type="checkbox" name="model[@i].Id" id="model[@i]_Id" value="@Model[i].Id" />
                                    <label for="model[@i]_Id">@Model[i].Name</label>
                                </div>
                            </td>
                            <td>
                                <input type="number" name="model[@i].Quantity" id="model[@i]_Quantity" value="@Model[i].Quantity" data-max="@Model[i].Quantity" data-min="1" max="@Model[i].Quantity" min="1" oninput="validateQuantity(this)" />
                                <span asp-validation-message-for="model[@i].Quantity" class="text-danger"></span>
                                <input type="hidden" name="model[@i].Name" value="@Model[i].Name" />
                                <input type="hidden" name="model[@i].SaleDeliveryId" value="@Model[i].SaleDeliveryId" />
                            </td>
                        </tr>

                    }
                </tbody>
            </table>
            
            <div class="form-floating mb-3">
                <button type="button" id="btnAddSaleDeliveryItem" class="btn btn-primary">Agregar Item Despacho</button>
            </div>

            <div class="row">
                <div class="col-10">
                </div>
                <div class="col-2">
                </div>
            </div>

        </form>
    </div>
</div>

@section Scripts
    {

    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }